---
import Layout from "@layouts/Layout.astro";

import Masthead from "@components/Masthead.astro";
import CardFlipContent from "@components/CardFlipContent.astro";
import BsCarouselTestimonials from "@components/BsCarouselTestimonials.astro";
import NewsletterSubscription from "@components/NewsletterSubscription.astro";

import CampaignVideos from "@components/VideoSwipeGallery.astro";

const card1_content = [
  {
    label: "SkillsFuture Series",
    href: "https://www.skillsfuture.gov.sg/series",
  },
  {
    label: "Tech-enabled courses",
    href: "https://www.myskillsfuture.gov.sg/content/portal/en/training-exchange/course-directory.html?fq=Course_Supp_Period_To_1%3A%5B2022-08-25T00%3A00%3A00Z%20TO%20*%5D&fq=IsValid%3Atrue&q=Tags%3A%22Tech-Enabled%20Services%20(SF%20Series)%22",
  },
  {
    label: "Digital media courses",
    href: "https://www.myskillsfuture.gov.sg/content/portal/en/training-exchange/course-directory.html?fq=Course_Supp_Period_To_1%3A%5B2022-08-25T00%3A00%3A00Z%20TO%20*%5D&fq=IsValid%3Atrue&q=Tags%3A%22Digital%20Media%20(SF%20Series)%22",
  },
  {
    label: "Job-Skills Insights",
    href: "https://www.myskillsfuture.gov.sg/content/portal/en/career-resources/career-resources/job-skills-insights.html",
  },
  {
    label: "Digital Economy courses",
    href: "https://linktr.ee/digitaleconomycourses",
  },
  {
    label: "Green Economy courses",
    href: "https://linktr.ee/greeneconomycourses",
  },
  {
    label: "Care Economy courses",
    href: "https://linktr.ee/careeconomycourses",
  },
];
const card2_content = [
  {
    label: "SkillsFuture Credit",
    href: "https://www.myskillsfuture.gov.sg/content/portal/en/career-resources/career-resources/education-career-personal-development/SkillsFuture_Credit.html",
  },
  {
    label: "SkillsFuture Career Transition Programme Courses",
    href: "https://www.myskillsfuture.gov.sg/content/portal/en/portal-search/portal-search-courses-tab.html?fq=Course_Supp_Period_To_1%3A%5B2022-04-19T00%3A00%3A00Z%20TO%20*%5D&fq=IsValid%3Atrue&q=SCTP",
  },
  {
    label: "SkillsFuture Career Transition Programme info page",
    href: "https://www.myskillsfuture.gov.sg/content/portal/en/career-resources/career-resources/education-career-personal-development/skillsfuture-career-transition-programme.html",
  },
];

import CardFlipImage1 from "@assets/why_upskill-img1.jpg";
import CardFlipImage2 from "@assets/why_upskill-img2.jpg";
import CardFlipImage3 from "@assets/why_upskill-img3.jpg";
---

<Layout
  title="SkillsFuture Singapore | Opportunities donâ€™t wait"
  desc="The rise of new and emerging growth areas will create new jobs and change existing jobs and skills. Upskilling yourself in these growth areas will enable you to seize new job opportunities and stay relevant as times and job roles change."
>
  <!-- masthead -->
  <Masthead />

  <!-- video -->
  <!-- <section class="section__padding bg-light">
    <div class="container">
      <div class="video-1-holder">
        <div class="row d-flex align-items-center">
          <div class="col-md-7 position-relative">
            <CampaignVideos />
          </div>
          <div class="col-md-5">
            <div class="video-txt">
              <h2 class="h2-xl">
                Check Out Our
                <span class="d-inline-block">Campaign Videos</span>
              </h2>
              <p class="p-md">
                Cursus porta, feugiat primis in ultrice ligula risus auctor
                tempus dolor feugiat, felis lacinia risus
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section> -->

  <!-- why_upskills -->
  <section id="why_upskill" class="my-5">
    <div class="container">
      <div class="section-title text-center">
        <!-- <span>Why Upskill</span> -->
        <h2 class="my-2 display-3">Staying Relevant in Changing Times</h2>
        <p class="col-md-8 mx-auto">
          The rise of new and emerging growth areas will create new jobs and
          change existing jobs and skills. Upskilling yourself in these growth
          areas will enable you to seize new job opportunities and stay relevant
          as times and job roles change.
        </p>
      </div>
      <div class="row my-5 row-cols-1 row-cols-md-3">
        <!-- card1 -->
        <CardFlipContent>
          <div class="card" slot="card_front">
            <img src={CardFlipImage1} class="card-img-top" alt="..." />
            <div class="card-body">
              <h4 class="card-title">In-Demand Skills</h4>
              <p class="card-text">
                Widen your career choices and options by exploring programmes
                that will equip you with in-demand skills.
              </p>
              <!-- <p>
                Prioritize skills and jobs in selected high-growth areas to
                seize new opportunities.
              </p> -->
            </div>
            <div class="card-footer">
              <a class="btn btn-outline-danger btn__cardflip">Find out more</a>
            </div>
          </div>
          <!-- back -->
          <div class="card" slot="card_back">
            <header class="card-header bg-info">
              <button class="btn btn__cardflip">
                <i class="bi bi-arrow-return-left"></i>
              </button>
            </header>
            <div class="card-body">
              <h4 class="card-title">In-Demand Skills</h4>
              <!-- <p class="card-text"></p> -->

              <ul class="nav flex-column">
                {
                  card1_content.map((item) => (
                    <>
                      <li class="nav-item">
                        <a
                          class="nav-link btn btn-outline-info mb-3 text-capitalize"
                          href={item.href}
                          target="_blank"
                        >
                          {item.label}
                        </a>
                      </li>
                    </>
                  ))
                }
              </ul>
            </div>
          </div>
        </CardFlipContent>

        <!-- card2 -->
        <CardFlipContent>
          <div class="card" slot="card_front">
            <img src={CardFlipImage2} class="card-img-top" alt="..." />
            <div class="card-body">
              <h4 class="card-title">Subsidies and Short Courses</h4>
              <p class="card-text">
                Stay relevant in your current job or prepare yourself for your
                next job opportunity by upgrading your skills through a short
                subsidised course.
              </p>
            </div>
            <div class="card-footer">
              <a class="btn btn-outline-danger btn__cardflip">Find out more</a>
            </div>
          </div>
          <!-- back -->
          <div class="card" slot="card_back">
            <header class="card-header bg-info">
              <button class="btn btn__cardflip">
                <i class="bi bi-arrow-return-left"></i>
              </button>
            </header>
            <div class="card-body">
              <h4 class="card-title">Subsidies and Short Courses</h4>
              <!-- <p>Use the following schemes to offset your fees.</p> -->
              <ul class="nav flex-column">
                {
                  card2_content.map((item) => (
                    <>
                      <li class="nav-item">
                        <a
                          class="nav-link btn btn-outline-info mb-3"
                          href={item.href}
                          target="_blank"
                        >
                          {item.label}
                        </a>
                      </li>
                    </>
                  ))
                }
              </ul>
            </div>
          </div>
        </CardFlipContent>

        <!-- card3 -->
        <CardFlipContent>
          <div class="card" slot="card_front">
            <img src={CardFlipImage3} class="card-img-top" alt="..." />
            <div class="card-body">
              <h4 class="card-title">Skills and Training Advisory</h4>
              <p>
                Book a free consultation and browse available resources to start
                upgrading your skills.
              </p>
            </div>
            <div class="card-footer">
              <a class="btn btn-outline-danger btn__cardflip">Find out more</a>
            </div>
          </div>
          <!-- back -->
          <div class="card" slot="card_back">
            <header class="card-header bg-info">
              <button class="btn btn__cardflip">
                <i class="bi bi-arrow-return-left"></i>
              </button>
            </header>
            <div class="card-body">
              <h4 class="card-title">Skills and Training Advisory</h4>
              <!-- <p>
                Get a free one-to-one <a
                  href="https://www.myskillsfuture.gov.sg/content/portal/en/career-resources/career-resources/education-career-personal-development/skills-training-advice.html"
                  target="_blank">Skills and Training Advisory</a
                >
                consultation with our Skills Ambassadors.
              </p> -->
              <ul class="nav flex-column">
                <li class="nav-item mb-3">
                  Get a free one-to-one consultation with our Skills
                  Ambassadors.
                  <a
                    class="nav-link btn btn-outline-info mt-2 mb-3"
                    href="https://www.myskillsfuture.gov.sg/content/portal/en/career-resources/career-resources/education-career-personal-development/skills-training-advice.html"
                    target="_blank"
                  >
                    Find out more
                  </a>
                </li>
                <li class="nav-item mb-3">
                  Explore a wealth of skills and career resources on <strong
                    >MySkillsFuture</strong
                  >.
                  <a
                    class="nav-link btn btn-outline-info mt-2 mb-3"
                    href="https://www.myskillsfuture.gov.sg/content/portal/en/index.html"
                    target="_blank"
                  >
                    Find out more
                  </a>
                </li>
                <li class="nav-item mb-3">
                  Attend free <strong>SkillsFuture Advice</strong> workshops that
                  provide guidance on skills upgrading and career planning.
                  <a
                    class="nav-link btn btn-outline-info mt-2 mb-3"
                    href="https://www.skillsfuture.gov.sg/advice"
                    target="_blank"
                  >
                    Find out more
                  </a>
                </li>
              </ul>
              <!-- <p>
                Explore a wealth of skills and career resources on
                <a
                  href="https://www.myskillsfuture.gov.sg/content/portal/en/index.html"
                  target="_blank">MySkillsFuture</a
                >.
              </p>
              <p>
                Attend free <a
                  href="https://www.skillsfuture.gov.sg/advice"
                  target="_blank">SkillsFuture Advice</a
                > workshops that provide guidance on skills upgrading and career
                planning.
              </p> -->
            </div>
          </div>
        </CardFlipContent>
      </div>
    </div>
  </section>

  <!-- roadshow -->
  <section class="py-5 bg-light">
    <div class="container mx-auto">
      <div class="row justify-content-center">
        <div class="col-md-10">
          <h2 class="h4 fw-normal mb-4">
            Join us for an immersive tech experience at the <strong
              class="d-inline-block">SkillsFuture Roadshow</strong
            >
            and find out how we can support your upskilling journey!
          </h2>
        </div>
      </div>
      <div class="row gx-5 justify-content-center align-items-center">
        <div class="col-auto">
          <div class="card text-bg-primary mb-3">
            <div class="card-body">
              <p class="display-6 m-0" style="line-height: 1.75">
                Northpoint City, South Atrium
                <br />28 to 30 October 2022
                <br />11am to 9pm
              </p>
            </div>
          </div>
        </div>
        <div class="col-auto col-md-6">
          <p>
            Learn how to bring your images to live through a <strong
              >free one-hour Augmented Reality (AR) workshop</strong
            > at the roadshow.
          </p>
          <p><small>Limited workshop slots available daily.</small></p>
          <a
            href="https://go.gov.sg/ssg-ar-202210"
            class="btn btn-danger"
            target="_blank">Register here</a
          >
        </div>
      </div>
    </div>
  </section>

  <!-- roadshow -->
  <section class="py-5 bg-light">
    <div class="container mx-auto">
      <div
        class="row gx-5 row-cols-2 justify-content-center align-items-center"
      >
        <div class="col-7 text-end">
          <h2 class="h3 fw-normal mb-4">
            Join us for an immersive tech experience at the <strong
              class="d-inline-block">SkillsFuture Roadshow</strong
            >
            and find out how we can support your upskilling journey!
          </h2>
        </div>
        <div class="col-auto">
          <div class="card text-bg-primary mb-3">
            <div class="card-body">
              <p class="display-5 m-0" style="line-height: 1.75">
                Northpoint City, South Atrium
                <br />28 to 30 October 2022
                <br />11am to 9pm
              </p>
            </div>
          </div>
        </div>
        <div class="row mt-4">
          <div class="col-auto text-center">
            <p class="lead">
              Learn how to bring your images to live through a free one-hour
              Augmented Reality (AR) workshop at the roadshow.
            </p>
            <p><small>Limited workshop slots available daily.</small></p>
            <a
              href="https://go.gov.sg/ssg-ar-202210"
              class="btn btn-danger"
              target="_blank">Register here</a
            >
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- roadshow -->
  <section class="py-5 bg-light">
    <div class="container mx-auto text-center">
      <div class="row gx-5 justify-content-center">
        <div class="col-lg-10">
          <h2 class="fw-normal mb-4">
            Join us for an immersive tech experience at the <strong
              class="d-inline-block">SkillsFuture Roadshow</strong
            >
            and find out how we can support your upskilling journey!
          </h2>
          <p class="display-4" style="line-height: 1.4">
            Northpoint City, South Atrium
            <br /><small>28 to 30 October 2022 | 11am to 9pm</small>
          </p>
          <p class="lead my-4">
            Learn how to bring your images to live through a free one-hour
            Augmented Reality (AR) workshop at the roadshow.
            <br /><small
              ><i class="text-muted">Limited workshop slots available daily.</i>
            </small>
          </p>
          <p>
            <a
              href="https://go.gov.sg/ssg-ar-202210"
              class="btn btn-danger"
              target="_blank">Register here</a
            >
          </p>
        </div>
      </div>
    </div>
  </section>

  <section class="my-5 py-5">
    <div class="container">
      <header class="text-center mb-5">
        <h2>Testimonials</h2>
        <p>Check out what our fellow Upskillers have to say.</p>
      </header>
      <div class="row">
        <div class="col">
          <BsCarouselTestimonials />
        </div>
      </div>
    </div>
  </section>

  <!-- subscription -->
  <NewsletterSubscription id="form__subscribe" />
</Layout>

<style>
  .card > header {
    text-align: end;
  }
  .card > header > .btn {
    padding: 0 1rem;
  }
  .bi {
    font-size: 1.5rem;
  }
</style>
