<script>
  window.onload = function () {
    var isSafari = /^((?!chrome|android).)*safari/i.test(navigator.userAgent);
    var isIphoneOrIpad = /iPad|iPhone|iPod/.test(navigator.platform);
    var targetElement = document.getElementById("why_guidance");
    // console.log(isSafari, isIphoneOrIpad);

    // Preferred background
    var preferredBg =
      "linear-gradient(135deg, rgb(var(--bs-info-rgb)) 0%, rgb(var(--bs-primary-rgb)) 120%)";

    // Fallback background
    var fallbackBg = "var(--color-darkblue)";

    if (isSafari && isIphoneOrIpad) {
      // targetElement.style.background = fallbackBg;
      targetElement.style.background = preferredBg;
      targetElement.style.padding = "0";
    }
  };
</script>
