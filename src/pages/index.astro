---
import Layout from "@layouts/Layout.astro";

import SwiperMasthead from "./_SwiperMasthead.astro";
import WhyUpskill from "./_WhyUpskill.astro";
import WhyGuidance from "./_WhyGuidance.astro";
import WhyGuidanceAchievement from "./_WhyGuidanceAchievement.astro";
import SwiperTestimonials from "src/pages/_SwiperTestimonials.astro";
import CampaignVideos from "./_CampaignVideos.astro";
---

<Layout
  title="SkillsFuture Singapore | Opportunities don't wait"
  desc="The rise of new and emerging growth areas will create new jobs and change existing jobs and skills. Upskilling yourself in these growth areas will enable you to seize new job opportunities and stay relevant as times and job roles change."
>
  <section id="masthead" class="px-4">
    <SwiperMasthead />
  </section>

  <!-- why_upskills -->
  <section id="why_upskill" class="my-5">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-8 text-center">
          <h2 class="display-3 my-2">Upskilling Benefits More Than Yourself</h2>
          <p>
            Upskilling ensures your skills stay relevant, increases your career
            opportunities, and secures your job stability. Most importantly,
            upskilling yourself displays your commitment and self-drive to
            inspire, encourage and benefit those around you.
          </p>
        </div>
      </div>
    </div>
    
    <div class="text--invert">
      <WhyUpskill />
    </div>

  </section>

  <section id="why_guidance" >
      <div class="text--invert">
        <WhyGuidance />

        <WhyGuidanceAchievement />
      </div>
  </section>

  <section id="testimonials" class="py-5">
    <div class="container-fluid">
      <div class="row text-center">
        <h2>Get Inspired</h2>
        <p>View the stories of those whoâ€™ve upskilled for a better future.</p>
      </div>
      <div class="row">
        <SwiperTestimonials />
      </div>
    </div>
  </section>

  <section id="campaign_video" class="my-5">
    <div class="container">
      <div class="row text-center">
        <h2>Meet Alan</h2>
        <p>You see him upskilling. Find out what the people around him see.</p>
      </div>
    </div>
    <CampaignVideos />
  </section>

</Layout>

