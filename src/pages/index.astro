---
import Layout from "../layouts/Layout.astro";

// import SwiperMasthead from "./_SwiperMasthead.astro";

// import WhyUpskill from "./_WhyUpskill.astro";

import WhyGuidance from "./_WhyGuidance.astro";
import WhyGuidanceAchievement from "./_WhyGuidanceAchievement.astro";
import SwiperTestimonials from "src/pages/_SwiperTestimonials.astro";
import CampaignVideos from "./_CampaignVideos.astro";

// import SwiperMasthead2 from "./_SwiperMasthead2.astro";
import SwiperMasthead3 from "./_SwiperMasthead3.astro";
import WhyUpskillPlain from "./_WhyUpskillPlain.astro";

// 240103-current_live_page - https://www.myskillsfuture.gov.sg/upskill/
---

<Layout
  title="SkillsFuture Singapore | When Jobs Evolve, New Skills Are Needed."
  desc="Innovation is radically transforming many industries, prompting a huge shift in the work environment. More than ever, upskilling has become a necessity, and having the initiative to learn and improve will help elevate your career opportunities and job stability."
>
  <section id="masthead">
    <div class="container">
      <!-- <SwiperMasthead2 /> -->
      <SwiperMasthead3 />
    </div>
  </section>

  <!-- why_upskills -->
  <section id="why_upskill" class="my-5">
    <div class="container">
      <div class="row justify-content-center text-center">
        <div class="col">
          <h1 class="h2 my-2" style="text-wrap: balance">
            Expand your career when you upskill
          </h1>
          <p class="col-md-8 mx-auto">
            In today’s ever-evolving world, there are constantly new shifts in
            the work environment. Always upgrade ourselves and stay one step
            ahead in the competitive job market.
          </p>
        </div>
      </div>
    </div>

    <div class="text--invert">
      <WhyUpskillPlain />
    </div>
  </section>

  <section id="why_guidance" class="text--invert">
    <WhyGuidance />

    <WhyGuidanceAchievement />
  </section>

  <section id="testimonials" class="py-5">
    <div class="container-fluid">
      <div class="row text-center">
        <h2>Get Inspired</h2>
        <p>View the stories of those who’ve upskilled for a better future.</p>
      </div>
      <div class="row">
        <SwiperTestimonials />
      </div>
    </div>
  </section>

  <section id="campaign_video" class="my-5">
    <div class="container">
      <div class="row text-center">
        <h2>Learning knows no age</h2>
        <p>
          Regardless of age or career stage, gaining new skills is important.
          Open the doors to new opportunities when you upskill.
        </p>
      </div>
    </div>
    <CampaignVideos />
  </section>
</Layout>

