---
import Layout from "../layouts/Layout.astro";

import SwiperMasthead from "./_SwiperMasthead.astro";
import WhyUpskill from "./_WhyUpskill.astro";
import WhyGuidance from "./_WhyGuidance.astro";
import WhyGuidanceAchievement from "./_WhyGuidanceAchievement.astro";
import SwiperTestimonials from "src/pages/_SwiperTestimonials.astro";
import CampaignVideos from "./_CampaignVideos.astro";
---

<Layout
  title="SkillsFuture Singapore | Opportunities don't wait"
  desc="The rise of new and emerging growth areas will create new jobs and change existing jobs and skills. Upskilling yourself in these growth areas will enable you to seize new job opportunities and stay relevant as times and job roles change."
>
  <section id="masthead" class="px-4">
    <SwiperMasthead />
  </section>

  <!-- why_upskills -->
  <section id="why_upskill" class="my-5">
    <div class="container">
      <div class="row justify-content-center text-center">
        <div class="col">
          <h1 class="display-4 my-2" style="text-wrap: balance">
            Secure your future by acquiring the right skills
          </h1>
          <p class="col-md-8 mx-auto">
            Innovation is radically transforming many industries, prompting a
            huge shift in the work environment. More than ever, upskilling has
            become a necessity, and having the initiative to learn and improve
            will help elevate your career opportunities and job stability.
          </p>
        </div>
      </div>
    </div>

    <div class="text--invert">
      <WhyUpskill />
    </div>
  </section>

  <section id="why_guidance" class="text--invert">
    <WhyGuidance />

    <WhyGuidanceAchievement />
  </section>

  <section id="testimonials" class="py-5">
    <div class="container-fluid">
      <div class="row text-center">
        <h2>Get Inspired</h2>
        <p>View the stories of those whoâ€™ve upskilled for a better future.</p>
      </div>
      <div class="row">
        <SwiperTestimonials />
      </div>
    </div>
  </section>

