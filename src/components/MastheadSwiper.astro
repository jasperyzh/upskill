---
import slide1 from "@assets/221006-upskill-masthead.jpg";
import slide1_mobile from "@assets/221006-upskill-masthead-mobile.jpg";
import slide2 from "@assets/221006-upskill-masthead-2.jpg";
import slide2_mobile from "@assets/221006-upskill-masthead-mobile-2.jpg";
---

<div class="my-slider w-100">
  <div>
    <picture>
      <source media="(min-width: 720px)" srcset={slide1} />
      <img class="img-fluid" src={slide1_mobile} />
    </picture>
  </div>
  <div>
    <picture>
      <source media="(min-width: 720px)" srcset={slide2} />
      <img class="img-fluid" src={slide2_mobile} />
    </picture>
  </div>
</div>

<script>
  import { tns } from "tiny-slider/src/tiny-slider";

  var slider = tns({
    container: ".my-slider",
    mode: "gallery",
    items: 1,
    slideBy: "page",
    navPosition: "bottom",
    controls: false,
    mouseDrag: true,
    autoplay: true,
    autoplayButtonOutput: false,
    speed: 800,
    autoplayTimeout: 8000,
  });
</script>
<style lang="scss" is:global>
  @import "tiny-slider/src/tiny-slider";
  .masthead__aspectratio {
    aspect-ratio: 1/1;

    @supports not (aspect-ratio: 1/1) {
      background-color: #041a3f;
      min-height: 80vh;
    }

    @include media-breakpoint-up(md) {
      aspect-ratio: 20/ 9;
    }
  }
  .tns-nav {
    text-align: center;
    margin: 10px 0;
  }
  .tns-nav > [aria-controls] {
    width: 9px;
    height: 9px;
    padding: 0;
    margin: 0 5px;
    border-radius: 50%;
    background: #ddd;
    border: 0;
  }
  .tns-nav > .tns-nav-active {
    background: $primary;
  }

  .tns-outer {
    position: relative;

    .tns-nav {
      position: absolute;
      bottom: 1rem;
      left: 50%;
      translate: -50% 0;
      margin: auto;
    }
  }
</style>
