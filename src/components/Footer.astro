<style lang="scss">
  $xs: 0;
  $sm: 576px;
  $md: 768px;
  $lg: 992px;
  $xl: 1200px;
  $xxl: 1400px;

footer {
    background: var(--upskill-bg);
    color: #fff;

    svg {
        fill: var(--bs-info);
    }

    a {
        color: #fff;
        text-decoration: none;
        transition: color 0.3s ease;
        &:hover,
        &:active {
            color: var(--bs-info);
        }
    }

    .col-auto {
        text-align: center;
        justify-content: center;
        margin: 1rem auto;

  @media (min-width: $lg){
            margin: 0;
            text-align: start;
        }
    }

    .uk-icon-button {
        width: 24px;
        height: 24px;
        border-radius: 5px;
        margin: 8px 5px 0 0;
    }
    .uk-icon-button {
        box-sizing: border-box;
        width: 1.6rem;
        height: 1.6rem;
        border-radius: 0.4rem;
        background: #f8f8f8;
        color: #999;
        vertical-align: middle;
        display: inline-flex;
        justify-content: center;
        align-items: center;
        transition: 0.1s ease-in-out;
        transition-property: color, background-color;
    }
}

</style>